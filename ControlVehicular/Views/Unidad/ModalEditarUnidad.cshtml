@model UnidadModelo
@using ControlVehicular.Models

<div id="modalEditarUnidad" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        @using (Html.BeginForm("", "", FormMethod.Post, new { id = "formEditarUnidad" }))
        {

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Editar Unidad</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Marca)
                            @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                            @Html.ValidationMessageFor(model => model.Marca, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Modelo)
                            @Html.EditorFor(model => model.Modelo, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                            @Html.ValidationMessageFor(model => model.Modelo, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Placa)
                            @Html.EditorFor(model => model.Placa, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                            @Html.ValidationMessageFor(model => model.Placa, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Anno)
                            @Html.DropDownListFor(model => model.UltimoAnnoRevision,
                           Enumerable.Range(1975, DateTime.Now.Year - 1974).Select(x => new SelectListItem { Text = x.ToString() }),
                           "Seleccione un año",
                           new { @class = "form-control", @required = "true" })
                            @Html.ValidationMessageFor(model => model.Anno, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.UltimoAnnoRevision)
                            @Html.DropDownListFor(model => model.UltimoAnnoRevision,
                           Enumerable.Range(1975, DateTime.Now.Year - 1974).Select(x => new SelectListItem { Text = x.ToString() }),
                           "Seleccione un año",
                           new { @class = "form-control", @required = "true" })
                            @Html.ValidationMessageFor(model => model.UltimoAnnoRevision, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Capacidad)
                            @Html.EditorFor(model => model.Capacidad, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                            @Html.ValidationMessageFor(model => model.Capacidad, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-12">
                            <h3>Fotografias</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                                <img id="img1" class="imgs" alt="Unidad" width="50" height="50" />
                                @Html.LabelFor(model => model.URLFotografiaUnidad)
                                @Html.EditorFor(model => model.URLFotografiaUnidad, new { htmlAttributes = new { @Name = "fotos", @class = "form-control file", @required = "true", @type = "file" } })
                                @Html.ValidationMessageFor(model => model.URLFotografiaUnidad, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-4">
                                <img id="img2" class="imgs" alt="Revision Tecnica" width="50" height="50" />
                            @Html.LabelFor(model => model.URLRevisionTecnica)
                            @Html.EditorFor(model => model.URLRevisionTecnica, new { htmlAttributes = new { @Name = "fotos", @class = "form-control file", @required = "true", @type = "file" } })
                            @Html.ValidationMessageFor(model => model.URLRevisionTecnica, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-4">
                                <img id="img3" class="imgs" alt="Tarjeta de Circulacion" width="50" height="50" />
                            @Html.LabelFor(model => model.URLTarjetaCirculacion)
                            @Html.EditorFor(model => model.URLTarjetaCirculacion, new { htmlAttributes = new { @Name = "fotos", @class = "form-control file", @required = "true", @type = "file" } })
                            @Html.ValidationMessageFor(model => model.URLTarjetaCirculacion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div>
                        @Html.Hidden("Empresa", "VALORDELAEMPRESA")
                    </div>

                    <div>
                        @Html.Hidden("Codigo")
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" onclick="Borrar()" class="btn btn-outline-danger mr-auto">Eliminar</button>

                    <button type="button" onclick="editarUnidad()" class="btn btn-outline-info"><i class="fa fa-plus"></i> Guardar</button>
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        }
    </div>
</div>

