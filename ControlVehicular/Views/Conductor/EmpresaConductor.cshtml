@model ControlVehicular.Models.ConductorModelo
@using ControlVehicular.Models

@{
    ViewBag.Title = "Conductor";

}
@section  Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/Conductor/ScriptConductor.js")"></script>
}

<h2>Conductores</h2>
<h5><strong>Empresa Codigo:</strong> <span class="text-muted" id="EmpresaId">@ViewBag.Empresa.Codigo</span></h5>
<p>
    <button type="button" class="btn btn-default" onclick="AbrilModalAgregarConductor();">Agregar Conductor</button>
</p>
<table id="TablaConductores"
       class="sortable table-bordered"
       data-toolbar="#toolbar"
       data-search="true"
       data-pagination="true"
       data-minimum-count-columns="2"
       data-id-field="Codigo"
       data-unique-id="Codigo"
       data-page-size="8"
       data-show-footer="false">
    <thead>
        <tr>
            <th data-field="Nombre" data-sortable="true">Nombre</th>
            <th data-field="TipoLicencia" data-sortable="true">TipoLicencia</th>
            <th data-field="FechaVencimiento" data-sortable="true" data-formatter="formatDate">FechaVencimiento</th>
            <th data-field="URLFotografiaCedula">URLFotografiaCedula</th>
            <th data-field="URLFotografiaLicencia">URLFotografiaLicencia</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<!-- Modal -->
<div id="modalAgregarConductor" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        @using (Html.BeginForm("", "", FormMethod.Post, new { id = "formAgregarConductor" }))
            {
            @Html.Hidden("Empresa") // Para el codigo de la empresa que ocupa el Conductor
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                <h4 class="modal-title">Agregar conductor</h4>
                                            </div>
                                            <div class="modal-body">
                                                <div class="input-group col-md-12">
                                                    <span class="input-group-addon" id="basic-addon1">
                                                        @Html.LabelFor(model => model.Nombre)
                                                    </span>
                                                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                                                </div>
                                                <br />
                                                <div class="input-group">
                                                    <span class="input-group-addon" id="basic-addon1">
                                                        @Html.LabelFor(model => model.TipoLicencia)
                                                    </span>
                                                    @Html.EditorFor(model => model.TipoLicencia, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.TipoLicencia, "", new { @class = "text-danger" })
                                                </div>
                                                <br />
                                                <div class="input-group">
                                                    <span class="input-group-addon" id="basic-addon1">
                                                        @Html.LabelFor(model => model.FechaVencimiento)
                                                    </span>
                                                    @Html.EditorFor(model => model.FechaVencimiento, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.FechaVencimiento, "", new { @class = "text-danger" })
                                                </div>
                                                <br />
                                                <div class="input-group">
                                                    <span class="input-group-addon" id="basic-addon1">
                                                        @Html.LabelFor(model => model.URLFotografiaCedula)
                                                    </span>
                                                    @Html.EditorFor(model => model.URLFotografiaCedula, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.URLFotografiaCedula, "", new { @class = "text-danger" })
                                                </div>
                                                <br />
                                                <div class="input-group">
                                                    <span class="input-group-addon" id="basic-addon1">
                                                        @Html.LabelFor(model => model.URLFotografiaLicencia)
                                                    </span>
                                                    @Html.EditorFor(model => model.URLFotografiaLicencia, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.URLFotografiaLicencia, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" onclick="guardarConductor()" class="btn-info"><i class="fa fa-plus"></i> Agregar</button>
                                                <button type="button" class="btn-default" data-dismiss="modal">Cancelar</button>
                                            </div>
                                        </div>
        }
    </div>
</div>

