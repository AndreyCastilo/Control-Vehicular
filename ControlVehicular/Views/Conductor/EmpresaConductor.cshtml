                                            @Html.ValidationMessageFor(model => model.URLFotografiaLicencia, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" onclick="guardarEditarConductor()" class="btn-info"><i class="fa fa-plus"></i> Guardar</button>
                                        <button type="button" onclick="Borrar()" class="btn-danger"><i class="fa fa-trash"></i> Eliminar</button>
                                        <button type="button" class="btn-default" data-dismiss="modal">Cancelar</button>
                                    </div>
                                </div>
        }
    </div>
</div>
