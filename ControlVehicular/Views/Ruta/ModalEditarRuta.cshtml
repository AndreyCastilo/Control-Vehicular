@model RutaModelo
@using ControlVehicular.Models

<div id="modalEditarRuta" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        @using (Html.BeginForm("", "", FormMethod.Post, new { id = "formEditarRuta" }))
        {

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Agregar Ruta</h4>
                </div>
                
                   

                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Conductor)
                            @Html.DropDownListFor(model => model.Conductor,
                           new SelectList(Model.ListaConductores, "Codigo", "Nombre"),
                           "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Conductor, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Vehiculo)
                            @Html.DropDownListFor(model => model.Vehiculo,
                           new SelectList(Model.ListaUnidades, "Codigo", "Modelo"),
                           "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Vehiculo, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Nombre)
                            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div>
                        @Html.Hidden("Empresa", "VALORDELAEMPRESA")
                    </div>
                    <div>
                        @Html.Hidden("Codigo")
                    </div>


                </div>
                
                <div class="modal-footer">
                    <button type="button" onclick="editarRuta()" class="btn btn-info"><i class="fa fa-plus"></i> Guardar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        }
    </div>
</div>
